<p id="notice"><%= notice %></p>

<h1>Evaluators</h1>
<div style="float:right"><h5><%= link_to 'New Evaluator', new_evaluator_path %></h5></div><br /><br /><br />

<div class="panel panel-default">

  <table class="table">
    <thead>
      <tr>
        <th style="padding:10px">Last Name</th>
        <th style="padding:10px">First Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @evaluators.order(:last_name).order(:first_name).each do |evaluator| %>
        <tr>
          <td style="padding:10px"><%= evaluator.last_name %></td>
          <td style="padding:10px"><%= evaluator.first_name %></td>
          <td style="padding:10px"><%= link_to 'Edit', edit_evaluator_path(evaluator) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
